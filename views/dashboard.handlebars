<section>
	<h2 class="post-header"><i class="fas fa-arrow-circle-right"></i>&emsp; New Post</h2>
	<form id="new-post-form">
		<div class="post-dash">
			<label for="post-title">Title</label>
			<input type="text" id="post-title" name="post-title" />

			<label for="post-body">Post Content</label>
			<input id="post-body" name="post-body" {{!--placeholder="...your post here"--}}></input>
		</div>
		<button type="submit" class="btn">Submit</button>
	</form>
</section>
{{#if posts.length}}
<section>
	<h2 class="post-header">Blog Posts</h2>
	<ol>
		{{#each posts as |post|}}
		<li>
			{{> post-content post}}
			<a href="/dashboard/edit/{{post.id}}" class="edit-post">Edit post</a>
		</li>
		{{/each}}
	</ol>
</section>
{{/if}}
{{>comment-content}}



<script src="/javascript/new-post.js"></script>