<article class="post">
	<div class="current-post">
		<h2 class="post-title">
			{{post.title}}
			</h2></br>
		</h2>
		<p class="post-content">{{post.content}}</p>

	</div>
	<div class="meta">
	</br>
		<i class="fas fa-feather-alt"></i>
		&emsp;by {{post.user.username}}
		</br>

		<i class="fas fa-clock"></i>
		&emsp;{{date_format post.created_at}}
		</br>

		<i class="fas fa-comment-dots"></i>
		&emsp;{{post.comments.length}}  {{word_format "comment" comments.length}}
	</div>
</article>
{{#if loggedIn}}
<form class="comment-form">
	<div>
		<textarea name="comment-body" placeholder="..your thoughts here"></textarea>
	</div>
	<div>
		<button type="submit" class="btn">add comment</button>
	</div>
</form>
<script src="/javascript/comment.js"></script>
{{/if}}
{{>comment-content}}
