
<div class="posts-style">
	<ul class="post-list">
		{{#each posts as |post|}}
		<li>
			<article class="post">
				<div class="title">
					<a href="/post/{{post.id}}">{{post.title}}</a>
				</div>
				<div class="meta">
					<i class="fas fa-feather-alt"></i>
					&emsp;by {{post.user.username}}
					</br>

					<i class="fas fa-clock"></i>
					&emsp;{{post.created_at}}
					</br>

					<i class="fas fa-comment-dots"></i>
					&emsp;<a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
				</div>
			</article>
		</li>
		{{/each}}
	</ul>
</div>