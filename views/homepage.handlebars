<ol class="post-list">
  <li>
    <article class="post">
      <div class="title">
        {{title}}
      </div>
      <div class="meta">
        By {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
</ol>